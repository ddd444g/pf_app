<h3 class="text-2xl font-bold mb-4 text-center text-blue-700">おススメ場所編集</h3>

<%= render "shared/error", obj: @recommend_place %>

<%= form_with model: @recommend_place, class: "bg-blue-100 p-4 rounded text-center mx-auto w-1/2" do |f| %>
  <div class="mb-10 text-center mx-auto w-1/2">
    <%= f.label :recommend_place_name,"登録名", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :recommend_place_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
  </div>
  <div class="mb-10 text-center mx-auto w-1/2">
    <%= f.label :recommend_comment,"おススメコメント", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :recommend_comment, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
  </div>

  <%= render "shared/place_map", place: @gone_place %>

  <div class="mb-10 mt-10 text-center mx-auto w-1/2">
    <p class="block text-gray-700 font-bold mb-2">Google マップでの情報</p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">名前：</span><%= @recommend_place.googlemap_name %></p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">住所：</span><%= @recommend_place.address %></p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">評価：</span><%= @recommend_place.rating %></p>
  </div>

  <div class="mt-4">
    <ul>
      <li><%= f.submit "編集を完了する", class: "text-center mx-auto w-1/2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue focus:bg-blue-600" %></li>
    </ul>
  </div>
<% end %>

<div class="mt-10 mb-10 text-center">
  <ul class="flex justify-center">
    <li class="mr-5"><%= link_to "一覧ページへ", recommend_places_path, class: "text-center mx-auto w-1/2 header-btn" %></li>
    <li><%= link_to "詳細ページへ", @recommend_place, class: "header-btn" %></li>
  </ul>
</div>
