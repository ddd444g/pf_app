<h3 class="text-2xl font-bold mb-4 text-center text-blue-700">行きたい場所編集</h3>

<%= render "shared/error", obj: @place %>

<%= form_with model: @place, class: "bg-blue-100 p-4 rounded text-center mx-auto w-1/2" do |f| %>
  <div class="mb-10 text-center mx-auto w-1/2">
    <%= f.label :name,"登録名", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
  </div>
  <div class="mb-10 text-center mx-auto w-1/2">
    <%= f.label :memo,"memo", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :memo, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
  </div>
  <div class="mb-10 text-center mx-auto w-1/2">
    <%= f.label :category_id,"カテゴリー選択", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.select :category_id, Category.all.map{|o| [o.name, o.id]}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
  </div>

  <%= render "shared/register_place_map", place: @place %>

  <div class="mb-10 mt-10 text-center mx-auto w-1/2">
    <p class="block text-gray-700 font-bold mb-2">Google マップでの情報</p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">名前：</span><%= @place.googlemap_name %></p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">住所：</span><%= @place.address %></p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">評価：</span><%= @place.rating %></p>
    <p class="bg-gray-50 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight"><span class="text-gray-700 font-bold">公式サイト：</span>
      <% if @place.website == "websiteはありません" %>
        websiteはありません
      <% else %>
        <%= link_to @place.website, @place.website, target: "_blank", class: "text-blue-500 underline hover:no-underline hover:text-blue-700" %>
      <% end %>
    </p>
  </div>

  <div class="mt-4">
    <ul>
      <li><%= f.submit "編集を完了する", class: "text-center mx-auto w-1/2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue focus:bg-blue-600" %></li>
    </ul>
  </div>
  <%= f.hidden_field :latitude,:value => @place.latitude, id: :lat %>
  <%= f.hidden_field :longitude,:value => @place.longitude, id: :lng %>
  <%= f.hidden_field :googlemap_name, :value => @place.googlemap_name, id: :name %>
  <%= f.hidden_field :address, :value => @place.address, id: :formatted_address %>
  <%= f.hidden_field :rating, :value => @place.rating, id: :rating %>
  <%= f.hidden_field :website, :value => @place.website, id: :website %>
<% end %>

<div class="mt-10 mb-10 text-center">
  <ul class="flex justify-center">
    <li class="mr-5"><%= link_to "一覧に戻る", places_path, class: "text-center mx-auto w-1/2 header-btn" %></li>
    <li><%= link_to "詳細ページへ", @place, class: "header-btn" %></li>
  </ul>
</div>
