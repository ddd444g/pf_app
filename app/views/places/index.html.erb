<h1 class="m-4 text-3xl font-bold text-gray-600 text-center">行きたい場所一覧</h1>
<div id="flash-message">
  <%= render 'shared/flash' %>
</div>

<div class="mx-auto max-w-7xl">
  <div class="ml-8">
    <%= form_with(url: places_path, method: :get) do |form| %>
      <%= form.label :search, "フリーワード検索:", class:"text-gray-700" %>
      <%= form.text_field :search, placeholder: "キーワードを入力", class: "bg-gray-100 shadow appearance-none border rounded py-2 px-4 mr-2 ml-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
      <%= form.submit "検索", class:"text-gray-100 bg-gray-400 hover:bg-gray-700 hover:text-gray-300 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue" %>
    <% end %>

    <% if @search_keyword.present? %>
      <p class="search_keyword text-gray-700 mt-2">入力された検索ワード: <%= @search_keyword %></p>
    <% end %>

    <% if @places_count > 0 %>
      <p class="places_count text-gray-700 mt-2">表示件数: <%= @places_count %>件</p>
    <% else %>
      <p class="places_count text-gray-700 mt-2">該当する結果はありませんでした。</p>
    <% end %>
  </div>

  <div class="mt-4 m-4 ml-8 flex flex-col md:flex-row">
    <div class="flex justify-start mb-4 items-center">
      <div class="flex">
        <% if params[:sort_param] == 'latest' %>
          <span class="mr-8 bg-blue-100 rounded-lg text-sm lg:text-base py-2 px-3 text-gray-700">新しい順</span>
        <% else %>
          <%= link_to "新しい順", places_path(sort_param: 'latest', search: params[:search]), class: "header-btn text-sm lg:text-base" %>
        <% end %>

        <% if params[:sort_param] == 'old' %>
          <span class="md:mr-8 bg-blue-100 rounded-lg text-sm lg:text-base py-2 px-3 text-gray-700">古い順</span>
        <% else %>
          <%= link_to "古い順", places_path(sort_param: 'old', search: params[:search]), class: "header-btn text-sm lg:text-base" %>
        <% end %>
      </div>
    </div>

    <div id="modal" x-data="{ open: false }">
      <div class="flex justify-between items-center mb-4">
        <div class="flex">
          <% if params[:sort_param] == 'rating' %>
            <span class="md:mr-8 bg-blue-100 rounded-lg text-sm lg:text-base py-2 px-3 text-gray-700 mr-8">評価の高い順</span>
          <% else %>
            <%= link_to "評価が高い順", places_path(sort_param: 'rating', search: params[:search]), class: "header-btn text-sm lg:text-base" %>
          <% end %>
          <%= link_to "全て表示", places_path, class: "header-btn mr-0 text-sm lg:text-base" %>
        </div>
        <%# smサイズ以上ののボタン %>
        <div class="hidden sm:flex md:ml-8">
          <button class="create-btn ml-0 text-sm lg:text-base" @click="open = true">行きたい場所を追加する</button>
        </div>
      </div>
      <%# smサイズ以下のボタン %>
      <div class="flex justify-start mb-4 sm:hidden">
        <button class="create-btn ml-0 text-sm" @click="open = true">行きたい場所を追加する</button>
      </div>
      <div id="exampleModal" class="absolute top-0 left-0 w-full min-h-screen items-center justify-center bg-black bg-opacity-50 z-50" x-show="open">
        <div class="mt-12 rounded text-center mx-auto xl:w-1/2" @click.away="open = false">
          <div class="bg-gray-100 justify-center mb-32 mr-4 ml-4 md:mr-16 md:ml-16 lg:mr-40 lg:ml-40 xl:mr-0 xl:ml-0">
            <h3 class="text-2xl font-bold pt-8 pb-8 text-center text-gray-600">行きたい場所新規登録</h3>

            <div class="bg-blue-100 m-8 mt-0">
              <%= render "shared/register_place_map", place: @place %>
            </div>

            <%= form_with(model: @place, local: false, class: "bg-blue-100 m-8 mb-0 rounded text-center") do |f| %>
              <div class="text-center mb-10 mr-4 ml-4 sm:mr-24 sm:ml-24 md:mr-40 md:ml-40 lg:mr-56 lg:ml-56 xl:mr-40 xl:ml-40">
                <%= f.label :name,"登録名", class: "pt-2 block text-gray-700 font-bold mb-2" %>
                <%= f.text_field :name, class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>
              <div class="text-center mb-10 mr-4 ml-4 sm:mr-24 sm:ml-24 md:mr-40 md:ml-40 lg:mr-56 lg:ml-56 xl:mr-40 xl:ml-40">
                <%= f.label :memo,"memo", class: "block text-gray-700 font-bold mb-2" %>
                <%= f.text_field :memo, class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>
              <div class="text-center mb-10 mr-4 ml-4 sm:mr-24 sm:ml-24 md:mr-40 md:ml-40 lg:mr-56 lg:ml-56 xl:mr-40 xl:ml-40">
                <%= f.label :category_id,"カテゴリー選択", class: "block text-gray-700 font-bold mb-2" %>
                <%= f.select :category_id, Category.all.map { |o| [o.name, o.id] }, {}, { class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" } %>
              </div>

              <div class="comments-error w-full text-sm md:text-base">
                <%= render "shared/error", obj: @place %>
              </div>

              <div class="text-center mr-4 ml-4 pb-8 sm:mr-24 sm:ml-24 md:mr-40 md:ml-40 lg:mr-56 lg:ml-56 xl:mr-40 xl:ml-40">
                <%= f.submit "登録を完了する", class: "w-full bg-blue-500 text-gray-100 hover:bg-blue-700 hover:text-gray-300 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue focus:bg-blue-600" %>
              </div>
              <%= f.hidden_field :latitude,:value => nil, id: :lat %>
              <%= f.hidden_field :longitude,:value => nil, id: :lng %>
              <%= f.hidden_field :user_id, value: @user.id %>
              <%= f.hidden_field :googlemap_name, value: '', id: :name %>
              <%= f.hidden_field :address, value: '', id: :formatted_address %>
              <%= f.hidden_field :rating, value: '', id: :rating %>
              <%= f.hidden_field :website, value: '', id: :website %>
            <% end %>
            <button class="mt-8 mb-8 bg-gray-600 text-gray-100 px-4 py-2 rounded no-outline focus:shadow-outline select-none hover:bg-gray-800 hover:text-gray-300" @click="open = false">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="places text-gray-800 mb-16">
    <%= render "shared/places", places: @places %>
  </div>
</div>
