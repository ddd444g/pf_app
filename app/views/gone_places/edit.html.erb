<h3>訪問済み場所編集</h3>

<%= render "shared/error", obj: @gone_place %>

<%= form_with model: @gone_place do |f| %>
  <table>
    <tr>
      <th><%= f.label :name,"登録名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :review,"レビュー" %></th>
      <td><%= f.text_field :review %></td>
    </tr>
    <tr>
      <th><%= f.label :score, "スコア" %></th>
      <td><%= f.number_field :score, in: 1..10, class:"posts-content" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
    </ul>
  </div>
  <%= f.hidden_field :latitude,:value => @gone_place.latitude, id: :lat %>
  <%= f.hidden_field :longitude,:value => @gone_place.longitude, id: :lng %>
<% end %>

<%= render "shared/register_place_map", gone_place: @gone_place %>
