document.querySelector("#gone-place-<%= @gone_place.id %>").remove();
document.querySelector('#flash-message').innerHTML = "<%= j render 'shared/flash' %>";

<%# もう一度行きたいに登録している場合、もう一度行きたい一覧からも削除 %>
<% if @once_again_place %>
  document.querySelector("#once-again-place-<%= @once_again_place.id %>").remove();
<% end %>

<%# 削除と同時に件数の表示も-1する処理 %>
if (document.querySelector('.gone_places_count')) {
  let currentPlacesCount = parseInt(document.querySelector('.gone_places_count').innerText.match(/\d+/)[0]);

  if (currentPlacesCount > 1) {
    document.querySelector('.gone_places_count').innerText = "表示件数: " + (currentPlacesCount - 1) + "件";
  } else {
    document.querySelector('.gone_places_count').innerText = "該当する結果はありませんでした。";
  }
}
