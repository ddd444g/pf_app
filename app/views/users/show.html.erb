<h3 class="text-2xl font-bold mb-4 text-center text-blue-700">ユーザー詳細</h3>

<% if flash[:notice] %>
  <p class="text-center mx-auto w-1/2 text-blue-700 bg-blue-100 p-4 rounded"><%= flash[:notice] %></p>
<% end %>

<table class="w-full border-collapse border border-blue-500">
  <tr>
    <th class="px-4 py-2 border border-blue-500 bg-blue-100">名前</th>
    <td><%= @user.name %></td>
    <th class="px-4 py-2 border border-blue-500 bg-blue-100">email</th>
    <td><%= @user.email %></td>
    <th class="px-4 py-2 border border-blue-500 bg-blue-100">編集</th>
    <td><%= link_to("編集", "/users/#{@user.id}/edit", class: "text-blue-500 hover:text-blue-700") %></td>
  </tr>
</table>

<%= render "shared/places", places: @places %>

<%= render "shared/gone_places", gone_places: @gone_places %>

<%= render "shared/once_again_places", once_again_places: @once_again_places %>
