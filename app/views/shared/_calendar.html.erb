<%= month_calendar events: plans do |date, plans| %>
  <%= date.day %>

  <div class="flex flex-col">
    <% plans.each do |plan| %>
      <div class="<%= plan_color_class(plan) %> plan-calendar-<%= plan.id %> rounded-lg p-2 mb-2">
        <%= link_to plan.plan_name, plan, class: "text-gray-800 hover:opacity-50" %>
      </div>
    <% end %>
  </div>
<% end %>
