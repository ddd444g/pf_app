<% if obj.errors.any? %>
  <% obj.errors.full_messages.each do |message| %>
    <div class="bg-red-100 border border-red-400 text-red-700 mr-4 ml-4 px-4 py-2 rounded text-center lg:mx-auto lg:w-1/2" role="alert">
      <ul>
        <li><%= message %></li>
      </ul>
    </div>
    <hr class="my-2" />
  <% end %>
<% end %>
