<header class="bg-gray-50">
  <div class="xl:hidden flex items-center justify-between p-8">
    <div class="title-font font-medium text-gray-900">
      <%= link_to "top", root_path, class: "ml-20 header-btn" %>
    </div>
    <div id="modal" x-data="{ open: false }">
      <button class="header-btn mr-20" @click="open = true">メニュー</button>
      <div id="exampleModal" class="absolute top-0 right-0 w-full min-h-screen items-center justify-center bg-black bg-opacity-50 z-50" x-show="open">
        <div class="mt-12 rounded text-center mx-auto w-1/2" @click.away="open = false">
          <div class="bg-gray-100">
            <div class="flex flex-col">
              <% if current_user %>
                <%= link_to(current_user.name , "/users/#{current_user.id}", class: "header-btn mr-0") %>
                <%= link_to("ログアウト", "/logout", method: :post, data: { confirm: "ログアウトしますか？" }, class: "header-btn mr-0") %>
                <%= link_to "おすすめ", recommend_places_path, class: "header-btn mr-0" %>
                <%= link_to "行きたい", places_path, class: "header-btn mr-0" %>
                <%= link_to "訪問済み", gone_places_path, class: "header-btn mr-0" %>
                <%= link_to "予定", plans_path, class: "header-btn mr-0" %>
              <% else %>
                <%= link_to("新規登録", "/users/new", class: "header-btn mr-0") %>
                <%= link_to("ログイン", "/login", class: "header-btn mr-0") %>
                <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "header-btn mr-0" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
