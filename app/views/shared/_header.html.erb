<header>
  <ul class="header-menus">
    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name , "/users/#{@current_user.id}") %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", method: :post, data: { confirm: "ログアウトしますか？" }) %>
      </li>
      <li>
        <%= link_to("ユーザー一覧", "/users") %>
      </li>
    <% else %>
      <li>
        <%= link_to("新規登録", "/users/new") %>
      </li>
      <li>
        <%= link_to("ログイン", "/login") %>
      </li>
    <% end %>
  </ul>
</header>
