<header class="header-right">
  <ul class="header-menus">
    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name , "/users/#{@current_user.id}") %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", method: :post, data: { confirm: "ログアウトしますか？" }) %>
      </li>
      <li>
        <%= link_to("ユーザー一覧", "/users") %>
      </li>
      <li>
        <%= link_to "行きたい場所新規登録", new_place_path %>
      </li>
      <li>
        <%= link_to "訪問済み場所新規登録", new_gone_place_path %>
      </li>
    <% else %>
      <li>
        <%= link_to("新規登録", "/users/new") %>
      </li>
      <li>
        <%= link_to("ログイン", "/login") %>
      </li>
      <li>
        <%= link_to "ゲストログイン", guest_login_path, method: :post %>
      </li>
    <% end %>
  </ul>
</header>
