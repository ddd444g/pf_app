<header class="bg-gray-50">
  <%# モバイルサイズとタブレットサイズのheader %>
  <div class="xl:hidden flex items-center justify-between p-8">
    <div class="title-font font-medium text-gray-900">
      <%= link_to "top", root_path, class: "ml-20 header-btn" %>
    </div>
    <div id="modal" x-data="{ open: false }">
      <button class="header-btn mr-20" @click="open = true">メニュー</button>
      <div id="exampleModal" class="absolute top-0 right-0 bottom-0 w-full min-h-screen items-center justify-center bg-black bg-opacity-50 z-50" x-show="open">
        <div class="mt-12 rounded text-center mx-auto w-1/2" @click.away="open = false">
          <div class="bg-gray-100">
            <div class="flex flex-col">
              <% if current_user %>
                <%= link_to(current_user.name , "/users/#{current_user.id}", class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mt-8 mb-8") %>
                <%= link_to("ログアウト", "/logout", method: :post, data: { confirm: "ログアウトしますか？" }, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8") %>
                <%= link_to "おすすめ", recommend_places_path, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8" %>
                <%= link_to "行きたい", places_path, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8" %>
                <%= link_to "訪問済み", gone_places_path, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8" %>
                <%= link_to "予定", plans_path, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8" %>
              <% else %>
                <%= link_to("新規登録", "/users/new", class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mt-8 mb-8") %>
                <%= link_to("ログイン", "/login", class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8") %>
                <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "header-btn mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-16 md:pt-4 md:pb-4 mb-8" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%# pcサイズ用のheader %>
  <div class="hidden xl:flex xl:items-center xl:justify-between p-8 container mx-auto">
    <div class="flex title-font font-medium items-center text-gray-900 mb-4 xl:mb-0">
      <span class="ml-3 text-xl"><%= link_to "top", root_path, class:  "header-btn" %></span>
    </div>
    <nav class="xl:ml-auto flex flex-wrap items-center text-base justify-center">
      <% if current_user %>
        <%= link_to(current_user.name , "/users/#{current_user.id}", class: "header-btn") %>
        <%= link_to("ログアウト", "/logout", method: :post, data: { confirm: "ログアウトしますか？" }, class: "header-btn") %>
        <%= link_to "おすすめ", recommend_places_path, class: "header-btn" %>
        <%= link_to "行きたい", places_path, class: "header-btn" %>
        <%= link_to "訪問済み", gone_places_path, class: "header-btn" %>
        <%= link_to "予定", plans_path, class: "header-btn" %>
      <% else %>
        <%= link_to("新規登録", "/users/new", class: "header-btn") %>
        <%= link_to("ログイン", "/login", class: "header-btn") %>
        <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "header-btn" %>
      <% end %>
    </nav>
  </div>
</header>
