<div class="-mx-4 overflow-x-auto">
  <div class="inline-block min-w-full shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr class="border-b border-gray-200">
        </tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">予定時刻</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">登録名</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">memo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">カテゴリー</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">googlemapでの正式名称</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">住所</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">googlemapでの評価</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">公式サイト</th>
          <th colspan="3"></th>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        <% plan_places.each do |plan_place| %>
          <tr id="plan_place-<%=plan_place.id %>">
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.start_time&.strftime("%-m月%-d日%H時%M分")%>~</td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.plan_place_name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.memo %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.category.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.googlemap_name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.address %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= plan_place.rating %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if plan_place.website == "websiteはありません" %>
                websiteはありません
              <% else %>
                <%= link_to plan_place.website, plan_place.website, target: "_blank", class: "text-blue-500 underline hover:no-underline hover:text-blue-700" %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap"><%= link_to "参照", plan_place, class: "text-blue-500 hover:text-blue-700" %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= link_to "編集", [:edit, plan_place], class: "text-blue-500 hover:text-blue-700" %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= link_to "削除", plan_place, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-blue-500 hover:text-blue-700", remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
