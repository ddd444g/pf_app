<table class="w-full border-collapse border border-blue-500">
  <thead>
    <tr class="bg-blue-100">
      <th class="px-4 py-2 border border-blue-500">登録名</th>
      <th class="px-4 py-2 border border-blue-500">memo</th>
      <th class="px-4 py-2 border border-blue-500">カテゴリー</th>
      <th class="px-4 py-2 border border-blue-500">googlemapでの正式名称</th>
      <th class="px-4 py-2 border border-blue-500">住所</th>
      <th class="px-4 py-2 border border-blue-500">googlemapでの評価</th>
      <th class="px-4 py-2 border border-blue-500">公式サイト</th>
      <th class="px-4 py-2 border border-blue-500">visited</th>
      <th class="px-4 py-2 border border-blue-500">参照</th>
      <th class="px-4 py-2 border border-blue-500">編集</th>
      <th class="px-4 py-2 border border-blue-500">削除</th>
    </tr>
  </thead>

  <tbody>
    <% places.each do |place| %>
      <tr id="place-<%=place.id %>" class="border-t border-blue-500">
        <td class="px-4 py-2 border border-blue-500"><%= place.name %></td>
        <td class="px-4 py-2 border border-blue-500"><%= place.memo %></td>
        <td class="px-4 py-2 border border-blue-500"><%= place.category.name %></td>
        <td class="px-4 py-2 border border-blue-500"><%= place.googlemap_name %></td>
        <td class="px-4 py-2 border border-blue-500"><%= place.address %></td>
        <td class="px-4 py-2 border border-blue-500"><%= place.rating %></td>
        <td class="px-4 py-2 border border-blue-500">
          <% if place.website == "websiteはありません" %>
            websiteはありません
          <% else %>
            <%= link_to place.website, place.website, target: "_blank", class: "text-blue-500 underline hover:no-underline hover:text-blue-700" %>
          <% end %>
        </td>
        <td class="px-4 py-2 border border-blue-500">
          <% if place.visited %>
            訪問済みです
          <% else %>
            <%= link_to "訪問済みにする", place, class: "header-btn" %>
          <% end %>
        </td>
        <td class="px-4 py-2 border border-blue-500"><%= link_to "参照", place, class: "text-blue-500 hover:text-blue-700" %></td>
        <td class="px-4 py-2 border border-blue-500"><%= link_to "編集", [:edit, place], class: "text-blue-500 hover:text-blue-700" %></td>
        <td class="px-4 py-2 border border-blue-500"><%= link_to "削除", place, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-blue-500 hover:text-blue-700", remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
