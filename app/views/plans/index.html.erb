<h1 class="m-4 text-3xl font-bold text-gray-600 text-center">予定一覧</h1>
<div id="flash-message">
  <%= render 'shared/flash' %>
</div>

<div class="mx-auto max-w-7xl">
  <div class="mt-4 ml-8 mb-4 flex justify-end items-center">
    <div id="modal" x-data="{ open: false }">
      <button class="create-btn mt-2 mb-2" @click="open = true">予定を追加する</button>
      <div id="exampleModal" class="absolute top-0 bottom-0 left-0 w-full min-h-screen items-center justify-center bg-black bg-opacity-50 z-50" x-show="open">
        <div class="mt-12 rounded text-center mx-auto w-1/2" @click.away="open = false">
          <div class="bg-gray-100 justify-center mb-32">
            <h3 class="text-2xl font-bold pt-8 pb-8 text-center text-gray-600">予定新規登録</h3>
            <%= form_with(model: @plan, local: false, class: "bg-blue-100 m-8 mb-0 rounded text-center") do |f| %>
              <div class="mb-10 ml-40 mr-40 text-center mx-auto">
                <%= f.label :plan_name,"予定名", class: "pt-2 pt-2 block text-gray-700 font-bold mb-2" %>
                <%= f.text_field :plan_name, class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>
              <div class="mb-10 ml-40 mr-40 text-center mx-auto">
                <%= f.label :start_time,"開始日時", class: "pt-2 block text-gray-700 font-bold mb-2" %>
                <%= f.datetime_field :start_time, class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>
              <div class="mb-10 ml-40 mr-40 text-center mx-auto">
                <%= f.label :end_time,"終了日時", class: "pt-2 block text-gray-700 font-bold mb-2" %>
                <%= f.datetime_field :end_time, class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>
              <div class="mb-10 ml-40 mr-40 text-center mx-auto">
                <%= f.label :plan_color,"色分け", class: "pt-2 block text-gray-700 font-bold mb-2" %>
                <%= f.select :plan_color, [["赤", "red"], ["青", "blue"], ["緑", "green"], ["紫", "purple"], ["黄色", "yellow"]], class: "bg-gray-100 shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300" %>
              </div>

              <div class="comments-error w-full">
                <%= render "shared/error", obj: @plan %>
              </div>

              <div class="ml-40 mr-40 pb-8 text-center">
                <%= f.submit "登録を完了する", class: "w-full bg-blue-500 text-gray-100 hover:bg-blue-700 hover:text-gray-300 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue focus:bg-blue-600" %>
              </div>
              <%= f.hidden_field :user_id, value: @user.id %>
            <% end %>
            <button class="mt-8 mb-8 bg-gray-600 text-gray-100 px-4 py-2 rounded no-outline focus:shadow-outline select-none hover:bg-gray-800 hover:text-gray-300" @click="open = false">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="plans text-gray-800 mb-16">
    <%= render "shared/plans", plans: @plans %>
  </div>
  <div class="calendar bg-white p-4 -mx-4 rounded-lg">
    <%= render "shared/calendar", plans: @plans %>
  </div>
</div>
